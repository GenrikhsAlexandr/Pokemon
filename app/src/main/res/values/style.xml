<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Pokemon" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.ToolBarPokemon" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Pokemon.Button.Primary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorCardItem</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Pokemon</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Alphabet.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.Alphabet.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


</resources>